/* components/article/article.wxss */
.container{
  margin-top:40rpx;
  margin-bottom: 20rpx;
  display: flex;
  position: relative; 
  box-shadow:2px 2px 3px #e3e3e3;
  flex-direction: column;
  width:620rpx;
  height:460rpx;

  /* padding:0 90rpx 0 90rpx;  */
}

.description{
  padding:5rpx 10rpx 8rpx 15rpx;  
  width:596rpx;
  background-color: #ffffffe3;
  /* height:100rpx; */
  position:absolute;  
  bottom: 0;
  font-size:38rpx;
  display: flex; 
  flex-direction: column;
  border-bottom-right-radius: 2px;
  border-bottom-left-radius: 2px;
}

.title{
  margin-top:10rpx;
  text-overflow:ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.author{
  font-size:34rpx;
  color:#999999;
  margin-top:-5rpx;
  margin-bottom: 10rpx;
  text-overflow:ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.comtents{
  font-size:27rpx;
  color:#999999;
  justify-content: flex-start;
   flex-direction: column;
  align-items: baseline;
   margin-bottom: 2rpx;
}

.foot{
  /* margin-top:3rpx; */
  font-size:28rpx;
  display: flex;
  flex-direction: row;
   background-color: #ffffff05;
  justify-content: flex-end;
}

.container image{
  width:100%;
  height:100%;
  border-radius: 2px;
}

.footer{
  display: flex;
  flex-direction: row;
   bottom: 0;
  justify-content: space-between;
}
 